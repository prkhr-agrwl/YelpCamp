<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Add New Comment to Campgroud <%=campground.name%></h1>
		<div style="width: 33%; margin:33px auto;">
			<form action="/campgrounds/<%= campground._id %>/comments" method="POST">		
				<div class="form-group">
					<label>Comment:</label><textarea class ="form-control" type="text" name="comment[text]"></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Add Comment</button>
				</div>
			</form>
			<a href="/campgrounds/<%= campground._id %>">GO BACK</a>
		</div>
	</div>
</div>
<% include ../partials/footer %>