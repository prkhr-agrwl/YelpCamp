<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Edit Comment</h1>
		<div style="width: 33%; margin:33px auto;">
			<form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">		
				<div class="form-group">
					<label>Comment:</label><textarea class ="form-control" type="text" name="comment[text]"><%=comment.text%></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Save</button>
				</div>
			</form>
			<a href="/campgrounds/<%=campground_id%>">GO BACK</a>
		</div>
	</div>
</div>
<% include ../partials/footer %>