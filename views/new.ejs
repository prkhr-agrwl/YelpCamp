<% include partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Create a new Campground</h1>
		<div style="width: 33%; margin:33px auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<label>Name of Campground:</label><input class ="form-control" type="text" name="name" placeholder="CampGround Name">
				</div>
						
